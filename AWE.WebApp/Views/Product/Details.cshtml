@model AWE.Models.Product
@{
    ViewData["Title"] = "Product Details";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0"><i class="bi bi-eye"></i> Product Details</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 text-center">
                            @if (!string.IsNullOrEmpty(Model.ImageURL))
                            {
                                <img src="@Model.ImageURL" alt="@Model.ProductName" class="img-fluid rounded shadow-sm mb-3" style="max-height: 300px;" />
                            }
                            else
                            {
                                <div class="bg-light rounded p-5 mb-3">
                                    <i class="bi bi-image" style="font-size: 5rem; color: #ccc;"></i>
                                    <p class="text-muted mt-2">No image available</p>
                                </div>
                            }

                            <div class="d-grid gap-2">
                                <a href="@Url.Action("Edit", new { id = Model.ProductID })" class="btn btn-warning">
                                    <i class="bi bi-pencil"></i> Edit Product
                                </a>
                                <a href="@Url.Action("Index")" class="btn btn-secondary">
                                    <i class="bi bi-arrow-left"></i> Back to List
                                </a>
                            </div>
                        </div>

                        <div class="col-md-8">
                            <h2 class="mb-3">@Model.ProductName</h2>
                            
                            <div class="mb-3">
                                @if (Model.IsActive)
                                {
                                    <span class="badge bg-success fs-6">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary fs-6">Inactive</span>
                                }

                                @if (Model.StockQuantity <= 0)
                                {
                                    <span class="badge bg-danger fs-6">Out of Stock</span>
                                }
                                else if (Model.StockQuantity <= Model.ReorderLevel)
                                {
                                    <span class="badge bg-warning text-dark fs-6">Low Stock</span>
                                }
                            </div>

                            <hr />

                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <h5 class="text-primary">Basic Information</h5>
                                    <table class="table table-sm">
                                        <tr>
                                            <th width="40%">Product ID:</th>
                                            <td>@Model.ProductID</td>
                                        </tr>
                                        <tr>
                                            <th>SKU:</th>
                                            <td><code>@Model.SKU</code></td>
                                        </tr>
                                        <tr>
                                            <th>Category ID:</th>
                                            <td>@Model.CategoryID</td>
                                        </tr>
                                        <tr>
                                            <th>Supplier ID:</th>
                                            <td>@Model.SupplierID</td>
                                        </tr>
                                    </table>
                                </div>

                                <div class="col-md-6">
                                    <h5 class="text-primary">Pricing & Stock</h5>
                                    <table class="table table-sm">
                                        <tr>
                                            <th width="40%">Price:</th>
                                            <td><strong class="text-success fs-5">@Model.Price.ToString("C")</strong></td>
                                        </tr>
                                        <tr>
                                            <th>Stock Quantity:</th>
                                            <td><strong>@Model.StockQuantity</strong> units</td>
                                        </tr>
                                        <tr>
                                            <th>Reorder Level:</th>
                                            <td>@Model.ReorderLevel units</td>
                                        </tr>
                                        <tr>
                                            <th>Stock Value:</th>
                                            <td><strong>@((Model.Price * Model.StockQuantity).ToString("C"))</strong></td>
                                        </tr>
                                    </table>
                                </div>
                            </div>

                            <hr />

                            <h5 class="text-primary">Description</h5>
                            <p class="text-muted">
                                @if (!string.IsNullOrEmpty(Model.Description))
                                {
                                    @Model.Description
                                }
                                else
                                {
                                    <em>No description available.</em>
                                }
                            </p>

                            <hr />

                            <h5 class="text-primary">Additional Details</h5>
                            <div class="row">
                                <div class="col-md-6">
                                    <p><strong>Weight:</strong> @(Model.Weight?.ToString("0.00") ?? "N/A") kg</p>
                                    <p><strong>Dimensions:</strong> @(Model.Dimensions ?? "N/A")</p>
                                </div>
                                <div class="col-md-6">
                                    <p><strong>Warranty:</strong> @(Model.Warranty ?? "N/A")</p>
                                </div>
                            </div>

                            <hr />

                            <h5 class="text-primary">Timestamps</h5>
                            <p><strong>Created:</strong> @Model.CreatedDate.ToString("dddd, MMMM dd, yyyy HH:mm:ss")</p>
                            <p><strong>Last Updated:</strong> @Model.LastUpdated.ToString("dddd, MMMM dd, yyyy HH:mm:ss")</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
