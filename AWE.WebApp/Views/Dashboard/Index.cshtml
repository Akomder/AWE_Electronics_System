@{
    ViewData["Title"] = "Dashboard";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-12">
            <h2><i class="bi bi-speedometer2"></i> Dashboard</h2>
            <p class="text-muted">
                Welcome, <strong>@ViewBag.CurrentUser.FirstName @ViewBag.CurrentUser.LastName</strong> 
                (<span class="badge bg-info">@ViewBag.CurrentUser.Role</span>)
            </p>
        </div>
    </div>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle"></i> @ViewBag.Error
        </div>
    }

    <!-- Statistics Cards -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card text-white bg-primary h-100 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title text-uppercase mb-0">Total Products</h6>
                            <h2 class="display-4 mt-2 mb-0">@(ViewBag.TotalProducts ?? 0)</h2>
                            <small>@(ViewBag.ActiveProducts ?? 0) active</small>
                        </div>
                        <i class="bi bi-box-seam" style="font-size: 3rem; opacity: 0.3;"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-white bg-warning h-100 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title text-uppercase mb-0">Low Stock</h6>
                            <h2 class="display-4 mt-2 mb-0">@(ViewBag.LowStockCount ?? 0)</h2>
                            <small>Needs reorder</small>
                        </div>
                        <i class="bi bi-exclamation-triangle" style="font-size: 3rem; opacity: 0.3;"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-white bg-danger h-100 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title text-uppercase mb-0">Out of Stock</h6>
                            <h2 class="display-4 mt-2 mb-0">@(ViewBag.OutOfStockCount ?? 0)</h2>
                            <small>Urgent action</small>
                        </div>
                        <i class="bi bi-x-circle" style="font-size: 3rem; opacity: 0.3;"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-white bg-success h-100 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title text-uppercase mb-0">Pending Orders</h6>
                            <h2 class="display-4 mt-2 mb-0">@(ViewBag.PendingOrders ?? 0)</h2>
                            <small>of @(ViewBag.TotalOrders ?? 0) total</small>
                        </div>
                        <i class="bi bi-cart-check" style="font-size: 3rem; opacity: 0.3;"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Inventory Value Card -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-cash-stack"></i> Total Inventory Value</h5>
                    <h2 class="text-success">@((ViewBag.TotalInventoryValue ?? 0m).ToString("C"))</h2>
                    <p class="text-muted mb-0">Based on current stock levels and prices</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-lightning-charge"></i> Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="@Url.Action("Index", "Product")" class="btn btn-outline-primary">
                            <i class="bi bi-box-seam"></i> Manage Products
                        </a>
                        <a href="@Url.Action("Create", "Product")" class="btn btn-outline-success">
                            <i class="bi bi-plus-circle"></i> Add New Product
                        </a>
                        <a href="@Url.Action("Index", "Order")" class="btn btn-outline-info">
                            <i class="bi bi-cart-check"></i> View Orders
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-warning">
                    <h5 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Alerts & Notifications</h5>
                </div>
                <div class="card-body">
                    @if ((ViewBag.LowStockCount ?? 0) > 0)
                    {
                        <div class="alert alert-warning mb-2">
                            <i class="bi bi-exclamation-triangle"></i>
                            <strong>@ViewBag.LowStockCount</strong> product(s) are running low on stock.
                        </div>
                    }
                    @if ((ViewBag.OutOfStockCount ?? 0) > 0)
                    {
                        <div class="alert alert-danger mb-2">
                            <i class="bi bi-x-circle"></i>
                            <strong>@ViewBag.OutOfStockCount</strong> product(s) are out of stock.
                        </div>
                    }
                    @if ((ViewBag.PendingOrders ?? 0) > 0)
                    {
                        <div class="alert alert-info mb-2">
                            <i class="bi bi-cart-check"></i>
                            <strong>@ViewBag.PendingOrders</strong> order(s) are pending processing.
                        </div>
                    }
                    @if ((ViewBag.LowStockCount ?? 0) == 0 && (ViewBag.OutOfStockCount ?? 0) == 0 && (ViewBag.PendingOrders ?? 0) == 0)
                    {
                        <div class="alert alert-success mb-0">
                            <i class="bi bi-check-circle"></i>
                            All systems operational. No alerts at this time.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
