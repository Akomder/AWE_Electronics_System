@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid mt-4">
    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="fade-in">
                <h2 class="mb-2">
                    <i class="bi bi-speedometer2"></i> Dashboard
                </h2>
                <p class="text-muted mb-0">
                    Welcome back, <strong>@ViewBag.CurrentUser?.FirstName @ViewBag.CurrentUser?.LastName</strong> 
                    <span class="badge bg-primary">@ViewBag.CurrentUser?.Role</span>
                </p>
            </div>
        </div>
    </div>

    <!-- Error Alert -->
    @if (ViewBag.Error != null)
    {
        <div class="alert alert-warning fade-in" role="alert">
            <i class="bi bi-exclamation-triangle"></i>
            <div>
                <strong>Alert</strong>
                <p class="mb-0">@ViewBag.Error</p>
            </div>
        </div>
    }

    <!-- Statistics Cards -->
    <div class="row g-3 mb-4">
        <div class="col-lg-3 col-md-6 fade-in" style="animation-delay: 0.1s;">
            <div class="card stat-card h-100 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="stat-label mb-2">Total Products</p>
                            <h2 class="stat-value">@(ViewBag.TotalProducts ?? 0)</h2>
                            <p class="stat-change mb-0">
                                <i class="bi bi-check-circle"></i> 
                                @(ViewBag.ActiveProducts ?? 0) active
                            </p>
                        </div>
                        <i class="bi bi-box-seam" style="font-size: 2.5rem; opacity: 0.2;"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6 fade-in" style="animation-delay: 0.2s;">
            <div class="card stat-card h-100 shadow-sm" style="background: #f39c12; color: white;">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="stat-label mb-2">Low Stock</p>
                            <h2 class="stat-value">@(ViewBag.LowStockCount ?? 0)</h2>
                            <p class="stat-change mb-0">
                                <i class="bi bi-exclamation-triangle"></i> 
                                Needs reorder
                            </p>
                        </div>
                        <i class="bi bi-exclamation-triangle" style="font-size: 2.5rem; opacity: 0.2;"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6 fade-in" style="animation-delay: 0.3s;">
            <div class="card stat-card h-100 shadow-sm" style="background: #e74c3c; color: white;">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="stat-label mb-2">Out of Stock</p>
                            <h2 class="stat-value">@(ViewBag.OutOfStockCount ?? 0)</h2>
                            <p class="stat-change mb-0">
                                <i class="bi bi-exclamation-circle"></i> 
                                Urgent action
                            </p>
                        </div>
                        <i class="bi bi-x-circle" style="font-size: 2.5rem; opacity: 0.2;"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6 fade-in" style="animation-delay: 0.4s;">
            <div class="card stat-card h-100 shadow-sm" style="background: #27ae60; color: white;">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="stat-label mb-2">Pending Orders</p>
                            <h2 class="stat-value">@(ViewBag.PendingOrders ?? 0)</h2>
                            <p class="stat-change mb-0">
                                <i class="bi bi-hourglass-split"></i> 
                                of @(ViewBag.TotalOrders ?? 0) total
                            </p>
                        </div>
                        <i class="bi bi-cart-check" style="font-size: 2.5rem; opacity: 0.2;"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Inventory Value Card -->
    <div class="row mb-4">
        <div class="col-12 fade-in" style="animation-delay: 0.5s;">
            <div class="card shadow-sm">
                <div class="card-header bg-dark text-white">
                    <i class="bi bi-cash-stack"></i> Total Inventory Value
                </div>
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-md-6">
                            <h3 class="text-dark fw-bold mb-0">
                                @((ViewBag.TotalInventoryValue ?? 0m).ToString("C"))
                            </h3>
                            <p class="text-muted small mt-2">
                                Based on current stock levels and prices
                            </p>
                        </div>
                        <div class="col-md-6 text-end">
                            <div class="d-flex justify-content-end gap-2 flex-wrap">
                                <div>
                                    <p class="text-muted small mb-1">This Month</p>
                                    <p class="fw-bold text-dark">+2.4%</p>
                                </div>
                                <div>
                                    <p class="text-muted small mb-1">Last Month</p>
                                    <p class="fw-bold text-muted">@((ViewBag.LastMonthValue ?? 0m).ToString("C"))</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content Row -->
    <div class="row">
        <!-- Quick Actions -->
        <div class="col-lg-6 mb-4 fade-in" style="animation-delay: 0.6s;">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-dark text-white">
                    <i class="bi bi-lightning-charge"></i> Quick Actions
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="@Url.Action("Index", "Product")" class="btn btn-outline-primary">
                            <i class="bi bi-box-seam"></i> Manage Products
                        </a>
                        <a href="@Url.Action("Create", "Product")" class="btn btn-outline-secondary">
                            <i class="bi bi-plus-circle"></i> Add New Product
                        </a>
                        <a href="@Url.Action("Index", "Order")" class="btn btn-outline-primary">
                            <i class="bi bi-cart-check"></i> View Orders
                        </a>
                        <a href="@Url.Action("Index", "GRN")" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-down-circle"></i> Goods Received
                        </a>
                        <a href="@Url.Action("Index", "GDN")" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-up-circle"></i> Goods Delivery
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Alerts & Notifications -->
        <div class="col-lg-6 mb-4 fade-in" style="animation-delay: 0.7s;">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-dark text-white">
                    <i class="bi bi-bell"></i> Alerts & Notifications
                </div>
                <div class="card-body">
                    @{
                        var hasAlerts = false;
                    }

                    @if ((ViewBag.LowStockCount ?? 0) > 0)
                    {
                        hasAlerts = true;
                        <div class="alert alert-warning mb-3" role="alert">
                            <i class="bi bi-exclamation-triangle-fill"></i>
                            <div>
                                <strong>Low Stock Alert</strong>
                                <p class="mb-0">@ViewBag.LowStockCount product(s) are running low on stock.</p>
                            </div>
                        </div>
                    }

                    @if ((ViewBag.OutOfStockCount ?? 0) > 0)
                    {
                        hasAlerts = true;
                        <div class="alert alert-danger mb-3" role="alert">
                            <i class="bi bi-x-circle-fill"></i>
                            <div>
                                <strong>Out of Stock</strong>
                                <p class="mb-0">@ViewBag.OutOfStockCount product(s) are out of stock.</p>
                            </div>
                        </div>
                    }

                    @if ((ViewBag.PendingOrders ?? 0) > 0)
                    {
                        hasAlerts = true;
                        <div class="alert alert-info mb-3" role="alert">
                            <i class="bi bi-hourglass-split"></i>
                            <div>
                                <strong>Pending Orders</strong>
                                <p class="mb-0">@ViewBag.PendingOrders order(s) are pending processing.</p>
                            </div>
                        </div>
                    }

                    @if (!hasAlerts)
                    {
                        <div class="alert alert-success mb-0" role="alert">
                            <i class="bi bi-check-circle-fill"></i>
                            <div>
                                <strong>All Systems Operational</strong>
                                <p class="mb-0">No alerts at this time.</p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Performance & Quick Stats -->
    <div class="row mb-4">
        <div class="col-12 fade-in" style="animation-delay: 0.8s;">
            <div class="card shadow-sm">
                <div class="card-header bg-dark text-white">
                    <i class="bi bi-graph-up"></i> Performance Summary
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-3 mb-3">
                            <h5 class="text-muted mb-2">Daily Revenue</h5>
                            <h3 class="fw-bold text-dark">
                                @((ViewBag.DailyRevenue ?? 0m).ToString("C"))
                            </h3>
                        </div>
                        <div class="col-md-3 mb-3">
                            <h5 class="text-muted mb-2">Monthly Revenue</h5>
                            <h3 class="fw-bold text-dark">
                                @((ViewBag.MonthlyRevenue ?? 0m).ToString("C"))
                            </h3>
                        </div>
                        <div class="col-md-3 mb-3">
                            <h5 class="text-muted mb-2">Conversion Rate</h5>
                            <h3 class="fw-bold text-dark">
                                @(ViewBag.ConversionRate ?? "0.0")%
                            </h3>
                        </div>
                        <div class="col-md-3 mb-3">
                            <h5 class="text-muted mb-2">Top Category</h5>
                            <p class="fw-bold text-dark mb-0">
                                @(ViewBag.TopCategory ?? "N/A")
                            </p>
                            <p class="small text-muted">@(ViewBag.TopCategorySales ?? 0) sales</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .stat-card {
        position: relative;
        overflow: hidden;
    }

    .stat-card::before {
        content: '';
        position: absolute;
        top: 0;
        right: 0;
        width: 120px;
        height: 120px;
        background: rgba(255, 255, 255, 0.05);
        border-radius: 50%;
        transform: translate(30px, -30px);
    }

    [style*="animation-delay"] {
        animation: fadeIn 0.6s cubic-bezier(0.34, 1.56, 0.64, 1) both;
    }
</style>
