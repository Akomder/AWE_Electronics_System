@model AWE.Models.User

@{
    ViewData["Title"] = "User Details";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-12">
            <h2><i class="bi bi-person-circle"></i> User Details</h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard")">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index")">Users</a></li>
                    <li class="breadcrumb-item active">Details</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="bi bi-person-fill"></i> @Model.FirstName @Model.LastName</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h6 class="text-muted mb-3"><i class="bi bi-person-badge"></i> Account Information</h6>
                            
                            <dl class="row">
                                <dt class="col-sm-4">User ID:</dt>
                                <dd class="col-sm-8"><span class="badge bg-secondary">#@Model.UserID</span></dd>

                                <dt class="col-sm-4">Username:</dt>
                                <dd class="col-sm-8"><strong>@Model.Username</strong></dd>

                                <dt class="col-sm-4">Role:</dt>
                                <dd class="col-sm-8">
                                    @if (Model.Role == "Admin")
                                    {
                                        <span class="badge bg-danger">@Model.Role</span>
                                    }
                                    else if (Model.Role == "Manager")
                                    {
                                        <span class="badge bg-warning">@Model.Role</span>
                                    }
                                    else if (Model.Role == "Accountant")
                                    {
                                        <span class="badge bg-info">@Model.Role</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@Model.Role</span>
                                    }
                                </dd>

                                <dt class="col-sm-4">Status:</dt>
                                <dd class="col-sm-8">
                                    @if (Model.IsActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inactive</span>
                                    }
                                </dd>
                            </dl>
                        </div>

                        <div class="col-md-6">
                            <h6 class="text-muted mb-3"><i class="bi bi-person-lines-fill"></i> Personal Information</h6>
                            
                            <dl class="row">
                                <dt class="col-sm-4">First Name:</dt>
                                <dd class="col-sm-8">@Model.FirstName</dd>

                                <dt class="col-sm-4">Last Name:</dt>
                                <dd class="col-sm-8">@Model.LastName</dd>

                                <dt class="col-sm-4">Email:</dt>
                                <dd class="col-sm-8">
                                    @if (!string.IsNullOrEmpty(Model.Email))
                                    {
                                        <a href="mailto:@Model.Email">@Model.Email</a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not provided</span>
                                    }
                                </dd>

                                <dt class="col-sm-4">Phone:</dt>
                                <dd class="col-sm-8">
                                    @if (!string.IsNullOrEmpty(Model.Phone))
                                    {
                                        <a href="tel:@Model.Phone">@Model.Phone</a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not provided</span>
                                    }
                                </dd>
                            </dl>
                        </div>
                    </div>

                    <hr />

                    <div class="row">
                        <div class="col-md-6">
                            <h6 class="text-muted mb-3"><i class="bi bi-clock-history"></i> Activity Information</h6>
                            
                            <dl class="row">
                                <dt class="col-sm-5">Created Date:</dt>
                                <dd class="col-sm-7">
                                    <i class="bi bi-calendar-check"></i> 
                                    @Model.CreatedDate.ToString("MMMM dd, yyyy")
                                    <br />
                                    <small class="text-muted">@Model.CreatedDate.ToString("hh:mm tt")</small>
                                </dd>

                                <dt class="col-sm-5">Last Login:</dt>
                                <dd class="col-sm-7">
                                    @if (Model.LastLogin.HasValue)
                                    {
                                        <i class="bi bi-calendar-check"></i>
                                        @Model.LastLogin.Value.ToString("MMMM dd, yyyy")
                                        <br />
                                        <small class="text-muted">@Model.LastLogin.Value.ToString("hh:mm tt")</small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Never logged in</span>
                                    }
                                </dd>
                            </dl>
                        </div>

                        <div class="col-md-6">
                            <h6 class="text-muted mb-3"><i class="bi bi-shield-check"></i> Security</h6>
                            
                            <dl class="row">
                                <dt class="col-sm-5">Password:</dt>
                                <dd class="col-sm-7">
                                    <span class="text-muted">••••••••</span>
                                    <br />
                                    <a href="@Url.Action("ChangePassword", new { id = Model.UserID })" 
                                       class="btn btn-sm btn-outline-warning mt-2">
                                        <i class="bi bi-key"></i> Change Password
                                    </a>
                                </dd>
                            </dl>
                        </div>
                    </div>

                    <hr class="my-4" />

                    <div class="d-flex justify-content-between">
                        <a href="@Url.Action("Index")" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                        <div>
                            <a href="@Url.Action("Edit", new { id = Model.UserID })" class="btn btn-primary">
                                <i class="bi bi-pencil"></i> Edit User
                            </a>
                            @if (Model.IsActive)
                            {
                                <form method="post" asp-action="Deactivate" asp-route-id="@Model.UserID" 
                                      onsubmit="return confirm('Are you sure you want to deactivate this user?');" 
                                      style="display:inline;">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-danger">
                                        <i class="bi bi-x-circle"></i> Deactivate
                                    </button>
                                </form>
                            }
                            else
                            {
                                <form method="post" asp-action="Activate" asp-route-id="@Model.UserID" 
                                      onsubmit="return confirm('Are you sure you want to activate this user?');" 
                                      style="display:inline;">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-success">
                                        <i class="bi bi-check-circle"></i> Activate
                                    </button>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
