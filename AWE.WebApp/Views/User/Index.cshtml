@model IEnumerable<AWE.Models.User>

@{
    ViewData["Title"] = "User Management";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2><i class="bi bi-people"></i> User Management</h2>
            <p class="text-muted">Manage system users and their access levels</p>
        </div>
        <div class="col-md-4 text-end">
            <a href="@Url.Action("Create")" class="btn btn-success">
                <i class="bi bi-person-plus"></i> Add New User
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">
            <i class="bi bi-exclamation-triangle"></i> @ViewBag.Error
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="bi bi-table"></i> All Users</h5>
        </div>
        <div class="card-body p-0">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Username</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Role</th>
                                <th>Status</th>
                                <th>Last Login</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td>
                                        <strong>@user.Username</strong>
                                    </td>
                                    <td>@user.FirstName @user.LastName</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(user.Email))
                                        {
                                            <a href="mailto:@user.Email">@user.Email</a>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (user.Role == "Admin")
                                        {
                                            <span class="badge bg-danger">@user.Role</span>
                                        }
                                        else if (user.Role == "Manager")
                                        {
                                            <span class="badge bg-warning">@user.Role</span>
                                        }
                                        else if (user.Role == "Accountant")
                                        {
                                            <span class="badge bg-info">@user.Role</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@user.Role</span>
                                        }
                                    </td>
                                    <td>
                                        @if (user.IsActive)
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Inactive</span>
                                        }
                                    </td>
                                    <td>
                                        @if (user.LastLogin.HasValue)
                                        {
                                            <small>@user.LastLogin.Value.ToString("MMM dd, yyyy HH:mm")</small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Never</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a href="@Url.Action("Details", new { id = user.UserID })" 
                                               class="btn btn-outline-info" title="View Details">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a href="@Url.Action("Edit", new { id = user.UserID })" 
                                               class="btn btn-outline-primary" title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a href="@Url.Action("ChangePassword", new { id = user.UserID })" 
                                               class="btn btn-outline-warning" title="Change Password">
                                                <i class="bi bi-key"></i>
                                            </a>
                                            @if (user.IsActive)
                                            {
                                                <form method="post" asp-action="Deactivate" asp-route-id="@user.UserID" 
                                                      onsubmit="return confirm('Are you sure you want to deactivate this user?');" 
                                                      style="display:inline;">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-outline-danger" title="Deactivate">
                                                        <i class="bi bi-x-circle"></i>
                                                    </button>
                                                </form>
                                            }
                                            else
                                            {
                                                <form method="post" asp-action="Activate" asp-route-id="@user.UserID" 
                                                      onsubmit="return confirm('Are you sure you want to activate this user?');" 
                                                      style="display:inline;">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-outline-success" title="Activate">
                                                        <i class="bi bi-check-circle"></i>
                                                    </button>
                                                </form>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="card-footer text-muted">
                    <small>
                        <i class="bi bi-info-circle"></i> 
                        Total Users: <strong>@Model.Count()</strong> | 
                        Active: <strong>@Model.Count(u => u.IsActive)</strong> | 
                        Inactive: <strong>@Model.Count(u => !u.IsActive)</strong>
                    </small>
                </div>
            }
            else
            {
                <div class="p-5 text-center text-muted">
                    <i class="bi bi-inbox" style="font-size: 3rem;"></i>
                    <p class="mt-3">No users found.</p>
                    <a href="@Url.Action("Create")" class="btn btn-primary">
                        <i class="bi bi-person-plus"></i> Add First User
                    </a>
                </div>
            }
        </div>
    </div>
</div>
