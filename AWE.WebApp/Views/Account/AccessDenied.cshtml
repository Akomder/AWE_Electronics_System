@{
    ViewData["Title"] = "Access Denied";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <div class="card shadow-sm">
                <div class="card-body p-5">
                    <i class="bi bi-shield-exclamation text-danger" style="font-size: 5rem;"></i>
                    <h2 class="mt-4">Access Denied</h2>
                    <p class="text-muted mt-3">
                        You do not have permission to access this resource.
                    </p>
                    <p class="text-muted">
                        Please contact your administrator.
                    </p>
                    <div class="mt-4">
                        <a href="@Url.Action("Index", "Dashboard")" class="btn btn-primary">
                            <i class="bi bi-house"></i> Go to Dashboard
                        </a>
                        <a href="@Url.Action("Logout", "Account")" class="btn btn-secondary">
                            <i class="bi bi-box-arrow-right"></i> Logout
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
