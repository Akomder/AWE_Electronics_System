@* Pagination Component - Reusable pagination control *@
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    var currentPage = ViewBag.CurrentPage ?? 1;
    var totalPages = ViewBag.TotalPages ?? 1;
    var actionName = ViewBag.ActionName ?? "Index";
    var controllerName = ViewBag.ControllerName ?? "";
}

@if (totalPages > 1)
{
    <nav aria-label="Page navigation" class="mt-4">
        <ul class="pagination justify-content-center">
            <!-- Previous Button -->
            <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                <a class="page-link" href="@Url.Action((string)actionName, (string)controllerName, new { page = currentPage - 1 })">
                    <i class="bi bi-chevron-left"></i> Previous
                </a>
            </li>

            <!-- Page Numbers -->
            @{
                int startPage = Math.Max(1, currentPage - 2);
                int endPage = Math.Min(totalPages, currentPage + 2);

                if (startPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action((string)actionName, (string)controllerName, new { page = 1 })">1</a>
                    </li>
                    if (startPage > 2)
                    {
                        <li class="page-item disabled">
                            <span class="page-link">...</span>
                        </li>
                    }
                }

                for (int i = startPage; i <= endPage; i++)
                {
                    <li class="page-item @(i == currentPage ? "active" : "")">
                        <a class="page-link" href="@Url.Action((string)actionName, (string)controllerName, new { page = i })">@i</a>
                    </li>
                }

                if (endPage < totalPages)
                {
                    if (endPage < totalPages - 1)
                    {
                        <li class="page-item disabled">
                            <span class="page-link">...</span>
                        </li>
                    }
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action((string)actionName, (string)controllerName, new { page = totalPages })">@totalPages</a>
                    </li>
                }
            }

            <!-- Next Button -->
            <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                <a class="page-link" href="@Url.Action((string)actionName, (string)controllerName, new { page = currentPage + 1 })">
                    Next <i class="bi bi-chevron-right"></i>
                </a>
            </li>
        </ul>
    </nav>
}
