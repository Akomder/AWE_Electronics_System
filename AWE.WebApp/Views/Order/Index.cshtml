@model IEnumerable<AWE.Models.Order>
@{
    ViewData["Title"] = "Orders";
    var currentStatus = ViewBag.CurrentStatus as string ?? "All";
}
<div class="container mt-4">
    <h2><i class="bi bi-cart"></i> Order Management</h2>
    
    <div class="row mb-3">
        <div class="col-md-12">
            <div class="btn-group" role="group">
                <a href="@Url.Action("Index", new { status = "All" })" class="btn @(currentStatus == "All" ? "btn-primary" : "btn-outline-primary")">All</a>
                <a href="@Url.Action("Index", new { status = "Pending" })" class="btn @(currentStatus == "Pending" ? "btn-primary" : "btn-outline-primary")">Pending</a>
                <a href="@Url.Action("Index", new { status = "Processing" })" class="btn @(currentStatus == "Processing" ? "btn-primary" : "btn-outline-primary")">Processing</a>
                <a href="@Url.Action("Index", new { status = "Shipped" })" class="btn @(currentStatus == "Shipped" ? "btn-primary" : "btn-outline-primary")">Shipped</a>
                <a href="@Url.Action("Index", new { status = "Delivered" })" class="btn @(currentStatus == "Delivered" ? "btn-primary" : "btn-outline-primary")">Delivered</a>
            </div>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-body p-0">
            @if (Model != null && Model.Any())
            {
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Order #</th>
                            <th>Customer</th>
                            <th>Order Date</th>
                            <th>Total Amount</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model)
                        {
                            <tr>
                                <td><strong>#@order.OrderID</strong></td>
                                <td>@order.CustomerName</td>
                                <td>@order.OrderDate.ToString("MMM dd, yyyy")</td>
                                <td>$@order.TotalAmount.ToString("N2")</td>
                                <td><span class="badge bg-info">@order.Status</span></td>
                                <td>
                                    <a href="@Url.Action("Details", new { id = order.OrderID })" class="btn btn-sm btn-outline-info">
                                        <i class="bi bi-eye"></i> View
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="p-5 text-center text-muted">
                    <p>No orders found.</p>
                </div>
            }
        </div>
    </div>
</div>
